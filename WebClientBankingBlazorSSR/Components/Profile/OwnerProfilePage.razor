@page "/owner/profile"
@using Microsoft.AspNetCore.Authorization
@using System.ComponentModel.DataAnnotations
@using WebClientBankingBlazorSSR.Hosting.Dtos
@using WebClientBankingBlazorSSR.Pages.Profile

@* @attribute [Authorize] *@
@* @attribute [Authorize(Roles = "Owner")] *@

@inject WebClientBankingBlazorSSR.Hosting.Clients.OwnersClient Owners
@inject NavigationManager Nav

<PageTitle>Kundenprofil</PageTitle>

<div class="container py-4" style="max-width: 860px;">
    <div class="mb-3">
        <h1 class="h3 mb-1">Kundenprofil</h1>
        <div class="text-muted">
            Bitte vervollständige deine Profildaten.
        </div>
    </div>

    @if (_loading)
    {
        <p>Lade …</p>
    }
    else
    {
        <EditForm EditContext="_editContext" OnValidSubmit="SaveAsync" novalidate>
            <DataAnnotationsValidator />

            @* Global validation *@
            @if (_showGlobalErrors)
            {
                <div class="alert alert-danger" role="alert">
                    <div class="fw-semibold mb-1">Eingaben prüfen</div>
                    <ValidationSummary />
                </div>
            }

            <!-- Basisdaten -->
            <div class="card shadow-sm mb-3">
                <div class="card-body">
                    <h2 class="h6 text-uppercase text-muted mb-3">Basis</h2>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <InputText @bind-Value="_model.Firstname" class="form-control" />
                                <label>Vorname</label>
                            </div>
                            <ValidationMessage For="@(() => _model.Firstname)" class="text-danger small" />
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating">
                                <InputText @bind-Value="_model.Lastname" class="form-control" />
                                <label>Nachname</label>
                            </div>
                            <ValidationMessage For="@(() => _model.Lastname)" class="text-danger small" />
                        </div>

                        <div class="col-12">
                            <div class="form-floating">
                                <InputText @bind-Value="_model.Email" class="form-control" />
                                <label>E-Mail</label>
                            </div>
                            <ValidationMessage For="@(() => _model.Email)" class="text-danger small" />
                            <div class="form-text">
                                Diese E-Mail stammt aus dem Login und kann angepasst werden.
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Adresse -->
            <div class="card shadow-sm mb-3">
                <div class="card-body">
                    <h2 class="h6 text-uppercase text-muted mb-3">Adresse (optional)</h2>

                    <div class="row g-3">
                        <div class="col-12">
                            <div class="form-floating">
                                <InputText @bind-Value="_model.Street" class="form-control" />
                                <label>Straße</label>
                            </div>
                            <ValidationMessage For="@(() => _model.Street)" class="text-danger small" />
                        </div>

                        <div class="col-md-4">
                            <div class="form-floating">
                                <InputText @bind-Value="_model.PostalCode" class="form-control" />
                                <label>PLZ</label>
                            </div>
                            <ValidationMessage For="@(() => _model.PostalCode)" class="text-danger small" />
                        </div>

                        <div class="col-md-8">
                            <div class="form-floating">
                                <InputText @bind-Value="_model.City" class="form-control" />
                                <label>Ort</label>
                            </div>
                            <ValidationMessage For="@(() => _model.City)" class="text-danger small" />
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating">
                                <InputText @bind-Value="_model.Country" class="form-control" />
                                <label>Land</label>
                            </div>
                            <ValidationMessage For="@(() => _model.Country)" class="text-danger small" />
                        </div>
                    </div>

                    <hr class="my-4" />

                    @if (!string.IsNullOrWhiteSpace(_saveError))
                    {
                        <div class="alert alert-danger" role="alert">@_saveError</div>
                    }
                    @if (!string.IsNullOrWhiteSpace(_saveOk))
                    {
                        <div class="alert alert-success" role="alert">@_saveOk</div>
                    }

                    <div class="d-flex gap-2 justify-content-end">
                        <button type="button" class="btn btn-outline-secondary" @onclick="Cancel">
                            Abbrechen
                        </button>

                        <button type="submit" class="btn btn-primary" disabled="_saving">
                            @(_saving ? "Speichern …" : "Speichern")
                        </button>
                    </div>
                </div>
            </div>
        </EditForm>
    }
</div>

@code {
    private bool _loading = true;
    private bool _saving;
    private bool _showGlobalErrors;
    private string? _saveError;
    private string? _saveOk;

    private OwnerProfileFormModel _model = new();
    private EditContext _editContext = default!;

    protected override async Task OnInitializedAsync()
    {
        _editContext = new EditContext(_model);
        _editContext.OnValidationStateChanged += (_, __) =>
            _showGlobalErrors = !_editContext.GetValidationMessages().Any();

        try
        {
            // Profil laden (read endpoint)
            var profile = await Owners.GetMeProfileAsync();

            // in Form Model kopieren
            _model.Firstname = profile.Firstname;
            _model.Lastname  = profile.Lastname;
            _model.Email     = profile.Email;
            _model.Street    = profile.Street;
            _model.PostalCode= profile.PostalCode;
            _model.City      = profile.City;
            _model.Country   = profile.Country;

            _editContext = new EditContext(_model);
        }
        finally
        {
            _loading = false;
        }
    }

    private void Cancel()
        => Nav.NavigateTo("/");

    private async Task SaveAsync()
    {
        _saving = true;
        _saveError = null;
        _saveOk = null;

        try
        {
            // TODO: Write-Endpunkt im OwnersClient implementieren:
            // await Owners.UpdateMeProfileAsync(_model);

            _saveOk = "Gespeichert.";
            // Optional: zurück nach Home
            // Nav.NavigateTo("/");
        }
        catch (Exception ex)
        {
            _saveError = ex.Message;
        }
        finally
        {
            _saving = false;
        }
    }
}
