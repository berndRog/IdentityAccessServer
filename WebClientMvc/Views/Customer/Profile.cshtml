@model WebClientMvc.Models.Dtos.CustomerProfileDto
@{
    ViewData["Title"] = "Kundenprofil";
}

<div class="container py-4" style="max-width: 860px;">
    <div class="mb-3">
        <h1 class="h3 mb-1">Kundenprofil</h1>
        <div class="text-muted">
            Bitte vervollständige deine Profildaten.
        </div>
    </div>

    @* Global validation *@
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger" role="alert">
            <div class="fw-semibold mb-1">Eingaben prüfen</div>
            <div asp-validation-summary="ModelOnly"></div>
        </div>
    }

    <form asp-action="Profile" method="post" novalidate>
        @Html.AntiForgeryToken()

        <!-- Basisdaten -->
        <div class="card shadow-sm mb-3">
            <div class="card-body">
                <h2 class="h6 text-uppercase text-muted mb-3">Basis</h2>

                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Firstname" class="form-control"  />
                            <label asp-for="Firstname"></label>
                        </div>
                        <span asp-validation-for="Firstname" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Lastname" class="form-control" placeholder="Nachname" />
                            <label asp-for="Lastname"></label>
                        </div>
                        <span asp-validation-for="Lastname" class="text-danger small"></span>
                    </div>

                    <div class="col-12">
                        <div class="form-floating">
                            <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                            <label asp-for="Email"></label>
                        </div>
                        <span asp-validation-for="Email" class="text-danger small"></span>
                        <div class="form-text">
                            Diese E-Mail stammt aus dem Login und kann angepasst werden.
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Adresse -->
        <div class="card shadow-sm mb-3">
            <div class="card-body">
                <h2 class="h6 text-uppercase text-muted mb-3">Adresse (optional)</h2>

                <div class="row g-3">
                    <div class="col-12">
                        <div class="form-floating">
                            <input asp-for="Street" class="form-control" placeholder="Straße" />
                            <label asp-for="Street"></label>
                        </div>
                        <span asp-validation-for="Street" class="text-danger small"></span>
                    </div>

                    <div class="col-md-4">
                        <div class="form-floating">
                            <input asp-for="PostalCode" class="form-control" placeholder="PLZ" />
                            <label asp-for="PostalCode"></label>
                        </div>
                        <span asp-validation-for="PostalCode" class="text-danger small"></span>
                    </div>

                    <div class="col-md-8">
                        <div class="form-floating">
                            <input asp-for="City" class="form-control" placeholder="Ort" />
                            <label asp-for="City"></label>
                        </div>
                        <span asp-validation-for="City" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Country" class="form-control" placeholder="Land" />
                            <label asp-for="Country"></label>
                        </div>
                        <span asp-validation-for="Country" class="text-danger small"></span>
                    </div>
                </div>

                <hr class="my-4" />

                <div class="d-flex gap-2 justify-content-end">
                    <a asp-controller="Home"
                       asp-action="Index"
                       class="btn btn-outline-secondary">
                        Abbrechen
                    </a>

                    <button type="submit" class="btn btn-primary">
                        Speichern
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
